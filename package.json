{
  "name": "ahk-server-v2",
  "version": "2.0.0",
  "description": "AutoHotkey v2 MCP Server with LSP-like capabilities",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "start": "node dist/index.js",
    "start:sse": "node dist/index.js --sse",
    "dev": "set NODE_ENV=development && node dist/index.js",
    "build": "npm run clean && tsc -p tsconfig.build.json",
    "watch": "tsc -w",
    "clean": "rimraf dist",
    "lint": "eslint src --ext .ts",
    "test": "pwsh -NoProfile -ExecutionPolicy Bypass -File scripts/run-ahk-test.ps1 -Wait",
    "test:mcp": "node scripts/test-mcp-run.js",
    "debug:scan": "node scripts/scan-debug.js",
    "debug:start": "node scripts/start-debug.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "flexsearch": "^0.7.43",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
