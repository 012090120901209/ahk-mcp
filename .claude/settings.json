{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "mcp__ahk_mcp__AHK_File_Edit.*",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"$CLAUDE_PROJECT_DIR/.claude/hooks/run-after-edit.py\"",
            "timeout": 60
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Bash(npm run build:*)"
    ],
    "deny": [],
    "ask": []
  }
}
